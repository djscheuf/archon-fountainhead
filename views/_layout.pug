html
  head
    title fountainhead - #{title}
    link(rel='stylesheet'
         href='//unpkg.com/blaze@4.0.0-6/scss/dist/blaze.min.css')
    style.
      .c-nav svg.feather {
        vertical-align: -.33em;
      }
      .x-link--ext {
        background-color: transparent;
        background-image: url("data:image/svg+xml;charset=utf-8;base64,");
        background-position: top right;
        background-repeat: no-repeat;
        color: #2196f3;
        padding-right: 13px;
      }
  body.c-text
    .c-nav.c-nav--inline
      .o-container.o-container--large
        .c-nav__item
          :feather-icon(size='super') home
          span.u-xlarge.u-pillar-box-small fountainhead
    .o-container.o-container--large
      block content
    .o-container.o-container--large
      if meta && meta['x-ratelimit-limit']
        p.u-xsmall.c-text--mono#rate_limit
          | api rate limit: 
          | #{meta['x-ratelimit-remaining']}/#{meta['x-ratelimit-limit']}
      else
        p.u-xsmall.c-text--mono no meta *frumple*